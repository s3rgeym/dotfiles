{
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "always",
      "source.organizeImports.ruff": "always"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false
  },
  //"cSpell.language": "en,ru",
  "editor.autoIndentOnPaste": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.hover.enabled": "on",
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  // (Опционально) Если хочешь, чтобы подсказки всплывали даже внутри строк или комментариев
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120,
  ],
  "editor.scrollBeyondLastLine": false,
  // Заставляет VS Code показывать "глупые" текстовые совпадения
  // одновременно с "умными" подсказками от LSP
  "editor.suggest.showWords": true,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.allowedLocales": {
    "ru": true
  },
  // Включает предложения на основе слов в документе
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Tokyo Night Storm",
  "python.languageServer": "Pylance",
}
